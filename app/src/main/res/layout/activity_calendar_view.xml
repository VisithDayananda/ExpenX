<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.expenx.expenx.activity.CalendarViewActivity">

    <LinearLayout
        android:id="@+id/calenderContent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp">
        <CalendarView
            android:id="@+id/calender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/calender_background"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/infoContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.54"
        android:orientation="vertical"
        android:background="@drawable/background_list_view">

    </LinearLayout>
</LinearLayout>
